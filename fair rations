#include <stdio.h>

char* fairRations(int B[], int n) {
    static char res[20];
    int count = 0;
    for (int i = 0; i < n - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            count += 2;
        }
    }
    if (B[n - 1] % 2 != 0) return "NO";
    sprintf(res, "%d", count);
    return res;
}

int main() {
    int n;
    scanf("%d", &n);
    int B[n];
    for (int i = 0; i < n; i++) scanf("%d", &B[i]);
    printf("%s\n", fairRations(B, n));
    return 0;
}
